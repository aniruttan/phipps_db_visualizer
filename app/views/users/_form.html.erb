    <%= form.label :email_id %>
    <%= form.text_area :email_id, id: :user_email_id %>
  </div>

  <div class="field">
    <%= form.label :password_digest %>
    <%= form.text_area :password_digest, id: :user_password_digest %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :user_active %>
