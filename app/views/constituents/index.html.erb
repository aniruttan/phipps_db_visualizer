<p id="notice"><%= notice %></p>

<h1>Constituents</h1>

<table>
  <thead>
    <tr>
      <th>Lookup</th>
      <th>Suffix</th>
      <th>Title</th>
      <th>Name</th>
      <th>Last group</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Dob</th>
      <th>Do not email</th>
      <th>Duplicate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constituents.each do |constituent| %>
      <tr>
        <td><%= constituent.lookup_id %></td>
        <td><%= constituent.suffix %></td>
        <td><%= constituent.title %></td>
        <td><%= constituent.name %></td>
        <td><%= constituent.last_group %></td>
        <td><%= constituent.email_id %></td>
        <td><%= constituent.phone %></td>
        <td><%= constituent.dob %></td>
        <td><%= constituent.do_not_email %></td>
        <td><%= constituent.duplicate %></td>
        <td><%= link_to 'Show', constituent %></td>
        <td><%= link_to 'Edit', edit_constituent_path(constituent) %></td>
        <td><%= link_to 'Destroy', constituent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

