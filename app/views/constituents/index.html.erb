<p id="notice"><%= notice %></p>

<nav aria-label="breadcrumb" class="breadcrumb-nav">
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to 'Constituents', constituents_path %></li>
  <li class="breadcrumb-item active" aria-current="page">All</li>
</ol>
</nav>

<div class="container">
  <h1 class="text-primary-dark">Constituents</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">LookupID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last/Group Name</th>
      <th scope="col">Suffix</th>
      <th scope="col">Title</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Do not email</th>
      <th scope="col">Duplicate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constituents.each do |constituent| %>
      <tr>
        <td><%= constituent.lookup_id %></td>
        <td><%= constituent.name %></td>
        <td><%= constituent.last_group %></td>
        <td><%= constituent.suffix %></td>
        <td><%= constituent.title %></td>
        <td><%= constituent.email_id %></td>
        <td><%= constituent.phone %></td>
        <td><%= constituent.dob %></td>
        <td><%= constituent.do_not_email %></td>
        <td><%= constituent.duplicate %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h3> Import constituents </h3>
<%= form_tag import_constituents_path, multipart: true do %>
  <%= file_field_tag :file%>
  <%= submit_tag "upload file"%>
<% end %>


</div>
